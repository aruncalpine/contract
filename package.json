{
  "name": "contract-registry.io",
  "version": "0.0.1",
  "private": true,
  "author": "Ralph Largo",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "tsc-node": "tsc -p tsconfig.json",
    "lint:js": "eslint src --ext .ts --ext .tsx --fix",
    "lint": "next lint",
    "check-updates": "ncu -u",
    "check-updates-minor": "ncu -u -t minor",
    "gql": "graphql-codegen",
    "export": "npm run build && next export"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc-node && lint-staged"
    }
  },
  "lint-staged": {
    "{**/*,*}.{json,css,md}": [
      "prettier --write"
    ],
    "{**/*,*}.{ts,tsx,js,jsx}": [
      "eslint .eslintrc.js --fix --max-warnings=-1",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.7.16",
    "@chakra-ui/react": "^2.4.9",
    "@emotion/react": "^11.10.5",
    "@emotion/styled": "^11.10.5",
    "@heroicons/react": "^2.0.16",
    "@next/font": "^13.1.6",
    "framer-motion": "^9.0.2",
    "next": "^13.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.43.8",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.2",
    "@graphql-codegen/typescript": "^2.3.1",
    "@graphql-codegen/typescript-document-nodes": "^2.2.5",
    "@graphql-codegen/typescript-operations": "^2.2.4",
    "@types/node": "^18.13.0",
    "@types/react": "^18.0.27",
    "@typescript-eslint/eslint-plugin": "^5.51.0",
    "@typescript-eslint/parser": "^5.51.0",
    "eslint": "8.33.0",
    "eslint-config-next": "^13.1.6",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^4.3.8",
    "lint-staged": "^13.1.1",
    "npm-check-updates": "^16.6.5",
    "prettier": "^2.8.4",
    "typescript": "^4.9.5"
  }
}
